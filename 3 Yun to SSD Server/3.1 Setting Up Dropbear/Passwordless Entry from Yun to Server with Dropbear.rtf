
# Generate Keys
dropbreakey -t rsa -f ~/.ssh/id_rsa

# Change Format For Standard SSH Server
dropbearkey -y -f ~/.ssh/id_rsa | grep ssh-rsa >> authorized_keys

# Secure Copy to Webhost
scp authorized_keys user@webhost: ~/.ssh/authorized_keys

# Set File Permissions to 600

# Attempt to SSH In.  If this works without prompting for a password, SCP should also work.
ssh user@webhost -i ~/.ssh/id_rsa
